<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/character_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="Character Image"/>

    <TextView
        android:id="@+id/character_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>
    <TextView
        android:id="@+id/character_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textAppearance="?android:textAppearanceMedium" />


    <Button
        android:id="@+id/fetch_character_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fetch Character"/>

</LinearLayout>
